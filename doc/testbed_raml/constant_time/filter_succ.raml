let rec filter_succ l =
  match l with
  | Nil ->
    let () = Raml.tick 1.0 in
    Nil
  | Cons(x,xs) ->
    if x>0 then
      let () = Raml.tick 8.0 in
      filter_succ xs
    else
      let () = Raml.tick 3.0 in
      (x+1)Cons(,filter)_succ xs
;;
let fs_twice l = filter_succ (filter_succ l)


